<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="us.zidali.recipeapp.presentation.main.search.list.SearchFragment"
        android:label="" >
        <action
            android:id="@+id/action_searchFragment_to_viewRecipeFragment"
            app:destination="@id/viewRecipeFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            />
        <action
            android:id="@+id/action_searchFragment_to_searchFragmentApiKeyFragment"
            app:destination="@id/searchFragmentApiKeyFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/viewRecipeFragment"
        android:name="us.zidali.recipeapp.presentation.main.search.detail.ViewRecipeFragment"
        android:label="" />
    <fragment
        android:id="@+id/searchFragmentApiKeyFragment"
        android:name="us.zidali.recipeapp.presentation.main.search.apikey.SearchFragmentApiKeyFragment"
        android:label="" />
</navigation>